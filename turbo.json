{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "//#check-format:root", "check-types", "lint"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "web#build": {
      "env": [
        "MICROCMS_API_KEY",
        "MICROCMS_API_BASE_URL",
        "MICROCMS_WEBHOOK_SECRET",
        "VERCEL_URL",
        "VERCEL_PROJECT_PRODUCTION_URL",
        "NODE_ENV",
        "FORCE_ENABLE_MICROCMS"
      ]
    },
    "check": {
      "dependsOn": ["^check", "//#check-format:root", "check-types", "lint"]
    },
    "lint": {
      "dependsOn": ["^lint", "//#check-format:root", "check-types"]
    },
    "lint-fix": {
      "dependsOn": ["^lint-fix", "//#format:root", "check-types"]
    },
    "check-types": {
      "dependsOn": ["^check-types", "//#check-format:root"]
    },
    "//#check-format:root": {},
    "//#format:root": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
